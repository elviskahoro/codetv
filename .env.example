# Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# MCP (Model Context Protocol) Configuration
MCP_ENDPOINT=your_mcp_endpoint_here

# Agent Reliability (Galileo) - Optional Feature
# Set to 'true' to enable Galileo monitoring and instrumentation
# WARNING: Enabling Galileo adds significant dependency overhead
#ENABLE_GALILEO=false

# Galileo Configuration (only required when ENABLE_GALILEO=true)
# GALILEO_API_KEY=your_galileo_api_key_here
# GALILEO_PROJECT_ID=your_project_id_here

# Render Deploy Hook (if using Render for deployment)
# RENDER_DEPLOY_HOOK_URL=your_render_deploy_hook_url_here

# Application Configuration
# DEBUG=false
# LOG_LEVEL=INFO
